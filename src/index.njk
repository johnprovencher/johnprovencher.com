---
title: ...
layout: 'base.njk'
---
<div id="meep">
    <div id="orb" tabindex="-1"></div>
    <a class="block-button" tabindex="0" id="chatter" target="_blank"><abbr class="dots"></abbr> <span id="type">Loading ...</span> <abbr class="dots"></abbr></a>
    <p id="chatterMobile" class="grey small">Loading ...</p>
    <a class="block-button" id="email" target="_blank" href="mailto:johnprovencher@gmail.com"><abbr class="dots"></abbr> <span id="typeEmail"></span> <abbr class="dots"></abbr></a>
</div>
<div id="info-container">
    <div class="info-grid">
        <div class="column">
        </div>
        <div class="column">
            <p class="" tabindex="0">{{ lore.info }}
            </p>
            <br>
            <p class="grey" tabindex="0">{{ lore.clients }}</p>
            <br><br>
            <p class="small">connect</p>
            <a class="block-button" target="_blank" href="https://www.instagram.com/johnprovencher/"><abbr class="dots"></abbr>instagram<abbr class="dots"></abbr></a>
            <a class="block-button" target="_blank" href="https://twitter.com/hahajohnx"><abbr class="dots"></abbr>twitter<abbr class="dots"></abbr></a>
            <br>
            <p class="small"><br>collect</p>
            <a class="block-button" target="_blank" href="www.example.com"><abbr class="dots"></abbr><span class="">johnx.work</span><abbr class="dots"></abbr></a>
            <br><br>
        </div>
        <div class="column">
            {% for item in lore.cv %}
            <div class="row lore">
                <a href="{{ item.link }}" target="_blank">
                    <span class="index-left"><span class="block-color">{{ item.title }}</span></span>
                    <span class="index-right"><span class="block-color">{{ item.date }}</span></span>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
    <div id="thumbnails">
        {%- for post in collections.post | reverse -%}
        {% if post.data.video %}
        <div tabindex="0" class="image-container">
            <video class="lozad" controls='false' muted>
                <source data-src="{{ post.data.video }}" type="video/mp4">
                <track label="{{post.data.imageAlt}}" label="English" default>
                Your browser does not support the video tag.
            </video>
            <br>
            <p class="small">{{ post.data.info }}</p>
        </div>
        {% endif %}
        {% if post.data.image %}
        <div tabindex="0" class="image-container">
            <img class="lozad" data-src="{{post.data.image}}" alt="{{post.data.imageAlt}}">
            <br>
            <p class="small">{{ post.data.info }}</p>
        </div>
        {% endif %}
        {% if post.data.imagetwo %}
        <div tabindex="0" class="image-container">
            <img class="lozad" data-src="{{post.data.imagetwo}}" alt="{{post.data.imageAlt}}">
            <br>
            <p class="small">{{ post.data.info }}</p>
        </div>
        {% endif %}
        {%- endfor -%}
    </div>
    {% include 'footer.njk' %}
</div>
<div tabindex="-1" id="slide-container">
    <div id="counter">
    </div>
    <div id="loader">( you've died )</div>
    <div id="slideshow">
        {%- for post in collections.post | reverse -%}
        {% if post.data.video %}
        <div tabindex="-1" class="slide" style="left:-5000px">
            <video tabindex="-1" type="video/mp4" controls='false' preload="none" muted autoplay loop playsinline>
                <source src="{{ post.data.video }}" type="video/mp4">
                <track label="{{post.data.imageAlt}}" label="English" default>
                Your browser does not support the video tag.
            </video>
        </div>
        {% endif %}
        {% if post.data.image %}
        <div tabindex="-1" class="slide">
            <img tabindex="-1" class="lozad" data-src="{{post.data.image}}" alt="{{post.data.imageAlt}}">
        </div>
        {% endif %}
        {% if post.data.imagetwo %}
        <div tabindex="-1" class="slide">
            <img tabindex="-1" class="lozad" data-src="{{post.data.imagetwo}}" alt="{{post.data.imageAlt}}">
        </div>
        {% endif %}
        {%- endfor -%}
    </div>
</div>