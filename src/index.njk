function trackMediaLoading() {
  const mediaElements = document.querySelectorAll('#slideshow img, #slideshow video');
  const totalMediaCount = mediaElements.length;
  let loadedMediaCount = 0;
  const loadedMediaSet = new Set();

  function mediaLoaded() {
    if (!loadedMediaSet.has(this)) {
      loadedMediaSet.add(this);
      loadedMediaCount++;
      console.log(`Media loaded: ${loadedMediaCount}/${totalMediaCount}`);
      if (loadedMediaCount === totalMediaCount) {
        console.log('All media items are loaded!');

