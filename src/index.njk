        // Perform additional actions once all media items are loaded
        // For example, show the slideshow or start playback.
      }
    }
  }

  function videoCanPlayThrough() {
    mediaLoaded.call(this);
    // For videos, use 'canplaythrough' event instead of 'load'
  }

  mediaElements.forEach((media) => {
    if (media.tagName === 'VIDEO') {
      media.addEventListener('canplaythrough', videoCanPlayThrough);
    } else {
      media.addEventListener('load', mediaLoaded);
    }
    // In case the media is already loaded (e.g., cached), check if it's complete
    if (media.complete || media.readyState === 4) {
      mediaLoaded.call(media);
    }
  });
}

// Call the trackMediaLoading function after the slideshow is rendered
